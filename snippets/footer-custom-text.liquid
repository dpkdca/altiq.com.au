<div class="footer-contact">
  
    <div class="contact_column address">
      <i class="fa fa-map-marker" aria-hidden="true"></i>
      <span>{{ block.settings.address }}</span>
    </div>

 
    <div class="contact_column phone">
      <a href="tel:{{ block.settings.phone }}">
        <i class="fa fa-phone" aria-hidden="true"></i>
        <span>{{ block.settings.phone }}</span>
      </a>
    </div>


    <div class="contact_column email">
      <a href="mailto:{{ block.settings.mail }}">
        <i class="fa fa-envelope" aria-hidden="true"></i>
        <span>{{ block.settings.mail }}</span>
      </a>
    </div>
  
</div>

<div class="footer__item-padding small--hide">
 
    <p class="h4 footer__title small--hide">{{ block.settings.title }}</p>
    <button
      type="button"
      class="h4 footer__title collapsible-trigger sizes medium-up--hide"
      aria-controls="Footer-{{ block.id }}">
      {{ block.settings.title }}
       {% render 'collapsible-icons' %}
    </button>
 


  <div
   
    id="Footer-{{ block.id }}"
    class="collapsible-content collapsible-content--small"
    >
    <div class="collapsible-content__inner">
      <div class="footer__collapsible{% unless block.settings.show_footer_title_new %} footer_collapsible--disabled{% endunless %}">
        
          <div class="image-wrap text-spacing" style="height: 0; padding-bottom: {{ 100 | divided_by: block.settings.image_new.aspect_ratio }}%;">
            {%- assign img_url = block.settings.image_new | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img
              class="lazyload"
              data-src="{{ img_url }}"
              data-widths="[360, 540, 720, 900, 1080, 1600]"
              data-aspectratio="{{ block.settings.image_new.aspect_ratio }}"
              data-sizes="auto"
              role="presentation"
              alt="{{ block.settings.image_new.alt }}">
            <noscript>
              <img
                class="lazyloaded"
                src="{{ block.settings.image_new | img_url: '400x' }}"
                alt="{{ block.settings.image_new.alt }}">
            </noscript>
          </div>
    

        <p>{{ block.settings.text_new }}</p>
      </div>
    </div>
  </div>
</div>